<UserControl x:Class="ClinicApp.Wpf.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Отчеты и экспорт" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Top">
            <Border BorderBrush="LightGray" BorderThickness="1" Padding="20" CornerRadius="5" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Отчет по приемам" FontSize="18" FontWeight="SemiBold"/>
                        <TextBlock Text="Экспорт всех записей на прием в формате CSV для анализа в Excel." 
                                   Foreground="Gray" TextWrapping="Wrap" Margin="0,5,0,0"/>
                    </StackPanel>
                    <Button Grid.Column="1" Content="Экспорт CSV" 
                            Command="{Binding ExportAppointmentsCommand}" 
                            Padding="20,10" VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <Border BorderBrush="LightGray" BorderThickness="1" Padding="20" CornerRadius="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Отчет по пациентам" FontSize="18" FontWeight="SemiBold"/>
                        <TextBlock Text="Экспорт базы данных пациентов в формате CSV." 
                                   Foreground="Gray" TextWrapping="Wrap" Margin="0,5,0,0"/>
                    </StackPanel>
                    <Button Grid.Column="1" Content="Экспорт CSV" 
                            Command="{Binding ExportPatientsCommand}" 
                            Padding="20,10" VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </StackPanel>

        <TextBlock Grid.Row="2" Text="{Binding StatusMessage}" 
                   Foreground="#2196F3" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,10,0,0"/>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="3" Background="#80FFFFFF" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock Text="Формирование отчета..." HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
        </Grid>
    </Grid>
</UserControl>
